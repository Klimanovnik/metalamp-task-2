mixin range-slider(parameters)
    - if (parameters === undefined) {parameters = {};}
    - if (parameters.classList === undefined) {parameters.classList = "";}
    div(class="range-slider-wrap " + parameters.classList)
        div(class="range-slider-text")
            h3(class="range-slider-text__title")= parameters.title
            div(class="range-slider-text__numbers")
                - if (parameters.minNumber === undefined) {parameters.minNumber = "0";}
                - if (parameters.maxNumber === undefined) {parameters.maxNumber = "50000";}
                - if (parameters.units === undefined) {parameters.units = "â‚½";}
                span(class="range-slider-text__min-number")
                span(class="range-slider-text__min-number-hidden")= parameters.minNumber
                span(class="range-slider-text__units")= parameters.units
                span(class="range-slider-text__hyphen") -
                span(class="range-slider-text__max-number")
                span(class="range-slider-text__max-number-hidden")= parameters.maxNumber
                span(class="range-slider-text__units")= parameters.units
                div(class="range-slider-text__offset")
                    - if (parameters.offsetFirstToLeft === undefined) {parameters.offsetFirstToLeft = "0";}
                    - if (parameters.offsetSecondToRight === undefined) {parameters.offsetSecondToRight = "0";}
                    span(class="range-slider-text__offset-first-to-left")= parameters.offsetFirstToLeft
                    span(class="range-slider-text__offset-second-to-right")= parameters.offsetSecondToRight
        div(class="range-slider")
            div(class="range-slider__circle range-slider__circle_first")
            div(class="range-slider__gradient")
            div(class="range-slider__circle range-slider__circle_second")
        div(class="range-slider-subtitle")= parameters.subtitle