mixin header(parameters)
    - if (parameters === undefined) {parameters = {};}
    - if (parameters.classList === undefined) {parameters.classList = "";}
    - if (parameters.isEntry === true) {parameters.classList = parameters.classList + " header_entry";}
    header(class="header " + parameters.classList)
        div(class="container-1920")
            div(class="header__inner")
                div(class="header__logo")
                    include ./../../assets/logo.svg
                mixin header__nav(classList)
                    - if (classList != "header__nav") {classList = "header__burger-nav";}
                    nav(class= classList)
                        a(class="header__link" href="") О нас
                        a(class="header__link header__link_with-arrow" href="") Услуги
                        a(class="header__link" href="") Вакансии
                        a(class="header__link" href="") Новости
                        a(class="header__link header__link_with-arrow" href="") Соглашения
                        include ./../button/button.pug
                        +button({
                            classList: "",
                            text: "Войти",
                            buttonType: "border"
                        })
                        +button({
                            classList: "",
                            text: "Зарегистрироваться",
                            buttonType: "wide"
                        })
                        - if (parameters.userName === undefined) {parameters.userName = "Юлий Цезарь";}
                        span(class="header__user-name")= parameters.userName
                +header__nav("header__nav")
                div(class="header__burger")
                    div(class="header__burger-line")
                    div(class="header__burger-line")
                    div(class="header__burger-underline")
                    div(class="header__burger-line")
            +header__nav("header__burger-nav")