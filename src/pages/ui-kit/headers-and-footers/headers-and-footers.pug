extends ./../../../assets/page-template.pug
block title
    title Headers&amp;Footers
block content
    div(class="headers-and-footers__wrap")
        // header
        include ./../../../components/header-with-pale-logo/header-with-pale-logo.pug
        +header-with-pale-logo()
        // content
        div(class="headers-and-footers__content")
            include ./../../../components/header/header.pug
            +header({
                classList: "m-b_40"
            })
            +header({
                classList: "m-b_40",
                isEntry: true
            })
            include ./../../../components/footer/footer.pug
            +footer({
                classList: "m-b_40"
            })
            +footer({
                classList: "footer_creative m-center"
            })